# MCP Session-Based Rate Limiting Configuration

# Enable/disable rate limiting
MCP_SESSION_RATE_LIMIT_ENABLED=true

# Rate limits for public sessions (no API key)
MCP_PUBLIC_HOURLY_LIMIT=100
MCP_PUBLIC_TEN_MINUTE_LIMIT=20

# Rate limits for authenticated sessions (with API key)
MCP_AUTHENTICATED_HOURLY_LIMIT=500
MCP_AUTHENTICATED_TEN_MINUTE_LIMIT=50

# Session timeout settings (in hours)
MCP_SESSION_TIMEOUT_HOURS=2
MCP_AUTHENTICATED_SESSION_TIMEOUT_HOURS=4

# Cleanup interval for expired sessions (in minutes)
MCP_CLEANUP_INTERVAL_MINUTES=10

# Optional: Redis configuration for multi-instance deployments
# MCP_RATE_LIMIT_REDIS_URL=redis://localhost:6379/1